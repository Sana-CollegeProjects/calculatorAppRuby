<h1>Simple Calculator</h1>
<%= form_tag "/sum" do %>
<%= text_field_tag :number1 %>
<%= text_field_tag :number2 %>
<%= submit_tag "+" %>
<% end %>

<br />

<%= form_tag "/subtract" do %>
<%= text_field_tag :number1 %>
<%= text_field_tag :number2 %>
<%= submit_tag "-" %>
<% end %>

<br />

<%= form_tag "/multiply" do %>
<%= text_field_tag :number1 %>
<%= text_field_tag :number2 %>
<%= submit_tag "*" %>
<% end %>

<br />

<%= form_tag "/divide" do %>
<%= text_field_tag :number1 %>
<%= text_field_tag :number2 %>
<%= submit_tag "/" %>
<% end %>

<hr>

<h1>Multiply</h1><br>
<%= @num1 %> * <%= @num2 %> = <%= @result %>